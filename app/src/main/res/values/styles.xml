<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/main_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#9A0D0D21</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mainactivity1</item>
        <item name="fontFamily">@font/font</item>
    </style>


    <style name="ActionButton">
        <item name="android:gravity">center</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:minWidth">@dimen/action_button_min_width_material</item>
        <item name="android:minHeight">@dimen/action_button_min_height_material</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">12.0dip</item>
        <item name="android:paddingEnd">12.0dip</item>
    </style>

    <style name="EditText">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlActivated">#ffffffff</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="PickerEditText">
        <item name="android:textSize">22.0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/ripple_material_light</item>
    </style>

    <style name="TextBelowImage" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/text_selector</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomCard</item>
    </style>
    <style name="CustomCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>
    <string name="ad_attribution">Ad</string>
</resources>
