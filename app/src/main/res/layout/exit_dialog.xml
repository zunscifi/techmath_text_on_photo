<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280.0dip"
    android:layout_height="match_parent"
    android:background="@drawable/card_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:text="@string/discard_photo"
        android:textColor="@color/white"
        android:textSize="20.0dip"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:alpha="60.0"
        android:gravity="center"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:text="@string/if_you_go_back_you_will_lose_your_photo"
        android:textColor="#97FFFFFF"
        android:textSize="16.0dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28.0dip"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_discard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/t_gradient_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:text="Yes"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

        <TextView
            android:id="@id/tv_keep"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/t_gradient_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="14.0dip" />

    </LinearLayout>
</LinearLayout>